#!/usr/bin/env bash
set -euo pipefail
C_BLACK='\033[1;30m'
C_RED='\033[1;31m'
C_GREEN='\033[1;32m'
C_YELLOW='\033[1;33m'
C_BLUE='\033[1;34m'
C_PURPLE='\033[1;35m'
C_CYAN='\033[1;36m'
C_WHITE='\033[1;37m'
C_GRAY='\033[1;34m'
C_RESET='\033[0m'
I_SKIP="${C_BLACK}[${C_CYAN} SKIP ${C_BLACK}] ${C_RESET}" # skipped
I_OK="${C_BLACK}[${C_GREEN} OK ${C_BLACK}] ${C_RESET}" # ok
I_START="${C_BLACK}[${C_CYAN} ... ${C_BLACK}] ${C_RESET}" # starting
I_DONE="${C_BLACK}[${C_GREEN} DONE ${C_BLACK}] ${C_RESET}" # success
I_ERR="${C_BLACK}[${C_RED} ERR ${C_BLACK}] ${C_RESET}" # error
I_EXIT="${C_BLACK}[${C_RED} EXIT ${C_BLACK}] ${C_RESET}" # script exit
I_WARN="${C_BLACK}[${C_YELLOW} WARN ${C_BLACK}] ${C_RESET}" # warning
I_INFO="${C_BLACK}[${C_PURPLE}  i  ${C_BLACK}] ${C_RESET}" # information
I_LOAD="${C_BLACK}[${C_CYAN} ... ${C_BLACK}] ${C_RESET}" # loading
I_ASK="${C_BLACK}[${C_BLUE}  ?  ${C_BLACK}] ${C_RESET}" # ask user for input (freetext)
I_YN="${C_BLACK}[${C_BLUE}  Y/N  ${C_BLACK}] ${C_RESET}" # ask user for yes/no
